{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="css/article.css">
{% endblock %}
{% block body %}
	{% include "template_parts/_articleHeader.html.twig" %}
	<main>
		<section>
			<article>
				<div>
					<img src="{{ 'images/articles/' ~ article.imageSrc }}" alt="illustration article">
					<p class="contenu">{{ article.contenu }}</p>
					<div>
						<h2>Nombre de vues :
							{{ article.nbreVues }}</h2>
					</div>
				</div>
				<div>
					<a href="{{ path('app_categorie', { id: article.categorie.id }) }}">
						Retour
					</a>
				</div>
			</article>
		</section>
		<section>
			<article>
				{% if not app.user %}
					<a id="addComm" href="/login">RÃ©diger un commentaire
					</a>
				{% endif %}

				{% if app.user %}
					<div>
						<div>
							<div id="comm">
								{{ form(commForm) }}
								</div>
							</div>
						</div>
					{% endif %}
				</article>
			</section>
			<section>
				<div>
					<h2>{{ total }}
						Commentaires :
					</h2>
				</div>
				{% for commentaire in article.commentaires %}
					{% if commentaire.publie %}
						<article class="comms">
							<div>
								{{ commentaire.user.pseudo }}
								le
								{{ commentaire.date | date("d/m/Y")}}
							</div>
							<div>
								<p>
									{{ commentaire.contenu }}
								</p>
							</div>
						</article>
					{% endif %}
				{% endfor %}
			</section>
		</main>
	{% endblock %}
	{% block javascripts %}
		{{ parent() }}
		<script type="module" src="js/article.js"></script>
	{% endblock %}
