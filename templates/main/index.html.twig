{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<main>
	<a href="{{ path('app_about') }}">A propos</a>
		<h1>Accueil</h1>
		{% for article in articles %}
			<h2>{{ article.titre }}</h2>
			<h3>{{ article.categorie.nom }}</h3>
			<p>by 
				{{ article.user.pseudo }}
				publi√© le
				{{ article.date | date("d/m/Y")}}</p>
			<p>
				business contact :
				<a href="{{ article.user.email }}">{{ article.user.email }}</a>
			</p>
			<p>
				vues :
				{{article.nbreVues }}
			</p>
			<p>
				<a href="{{ path('app_article', { id: article.id }) }}">Lire</a>
			</p>
		{% endfor %}
	</main>
{% endblock %}
